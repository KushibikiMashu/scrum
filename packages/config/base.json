{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es2021"
    ],
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "declaration": true
  },
  "exclude": ["node_modules"]
}
