{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "es2022"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@panda-project/core/*": ["@panda-project/core/dist/*"],
      "@panda-project/use-case/*": ["@panda-project/use-case/dist/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "declaration": true
  },
  "exclude": ["node_modules"]
}
