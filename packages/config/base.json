{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "es2022"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "declaration": true
  },
  "exclude": ["node_modules"]
}
